<!DOCTYPE html>
<html>
<head>
  <title>Yelpdemo</title>
  <!--Move render above stylesheet_link_tag as per Create a Custom Banner -->
  <%= render 'layouts/bootstrap' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body  data-no-turbolink>
  <!-- Facebook Like button -->

  <%= render 'layouts/facebook' %>

	<!--Use _navbar.html.erb-->
	<%= render 'layouts/navbar' %>
	<div class="container-fluid">
		<!-- Devise alerts deleted in 7. Customise Alerts and Error Messages -->

		<!-- Alex's custom alert with dismissable button -->
	<% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <div class="alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissable">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        </div>
      <% end %>
    <% end %> 
		

		<!--Put whatever is in views/pages here-->
		<%= yield %>
<%= render 'layouts/footer' %>
	</div>
	
</body>
</html>
